<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="st"   class="com.nt.beans.Student">
        <constructor-arg value="raja" type="java.lang.String"/>
        <constructor-arg value="89.45f" type="float"/>
        <constructor-arg value="101"  type="int"/>
  </bean>
  <bean id="mk"  class="com.nt.beans.Marks">
     <constructor-arg value="89" index="1"/>
     <constructor-arg value="80" index="2"/>
     <constructor-arg value="100" index="0"/>
  </bean>
  
  <bean id="cust"   class="com.nt.beans.Customer">
     <constructor-arg name="custId"  value="1001"/>
     <constructor-arg name="addrs"  value="hyd"/>
      <constructor-arg name="custName"  value="jani"/>
     <constructor-arg name="billAmt"  value="45645.45"/>
  </bean>

</beans>